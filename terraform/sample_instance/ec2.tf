provider "aws" {
  region = "us-west-2"
}

resource "aws_security_group" "ssh_traffic" {
  name        = "ssh_traffic"
  description = "Allow SSH inbound traffic"
  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  tags = {
    git_commit           = "ccf843332025e5f6df2f69f5d7683adb34aba466"
    git_file             = "terraform/sample_instance/ec2.tf"
    git_last_modified_at = "2021-10-05 13:24:56"
    git_last_modified_by = "91682683+asiosio@users.noreply.github.com"
    git_modifiers        = "91682683+asiosio"
    git_org              = "asiosio"
    git_repo             = "terragoat"
    yor_trace            = "56dae40f-c780-4889-ab1c-0c4358a59676"
  }
}

resource "aws_instance" "web_server_instance" {
  ami             = data.aws_ami.ubuntu.id
  instance_type   = "t2.micro"
  security_groups = ["${aws_security_group.ssh_traffic.name}"]
  tags = {
    Name                 = "bc_workshop_ec2"
    git_commit           = "ccf843332025e5f6df2f69f5d7683adb34aba466"
    git_file             = "terraform/sample_instance/ec2.tf"
    git_last_modified_at = "2021-10-05 13:24:56"
